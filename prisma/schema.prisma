datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  email    String @unique
}

model Otp {
  id        Int      @id @default(autoincrement())
  otpCode   String
  createdAt DateTime @default(now())
  expiresAt DateTime
  email     String
}
